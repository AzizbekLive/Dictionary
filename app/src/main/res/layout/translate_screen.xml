<?xml version="1.0" encoding="utf-8"?><androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:app="http://schemas.android.com/apk/res-auto"    xmlns:tools="http://schemas.android.com/tools"    android:layout_width="match_parent"    android:layout_height="match_parent"    android:background="#efe9ff">    <androidx.constraintlayout.widget.ConstraintLayout        android:layout_width="match_parent"        android:layout_height="match_parent">        <androidx.cardview.widget.CardView            android:layout_width="360dp"            android:layout_height="match_parent"            android:layout_marginVertical="50dp"            app:cardCornerRadius="35dp"            app:layout_constraintBottom_toBottomOf="parent"            app:layout_constraintEnd_toEndOf="parent"            app:layout_constraintStart_toStartOf="parent"            app:layout_constraintTop_toTopOf="parent">            <androidx.constraintlayout.widget.ConstraintLayout                android:layout_width="match_parent"                android:layout_height="match_parent">                <ImageView                    android:layout_width="match_parent"                    android:layout_height="match_parent"                    android:scaleType="center"                    android:src="@drawable/bg_gradient" />                <ImageView                    android:layout_width="300dp"                    android:layout_height="wrap_content"                    android:layout_marginEnd="230dp"                    android:scaleType="center"                    android:src="@drawable/bg_girl"                    app:layout_constraintBottom_toTopOf="@id/langs"                    app:layout_constraintEnd_toEndOf="parent"                    app:layout_constraintStart_toStartOf="parent" />                <TextView                    android:id="@+id/dic"                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"                    android:layout_marginTop="-100dp"                    android:text="Dictionary"                    android:textColor="@color/white"                    android:textSize="30dp"                    android:textStyle="bold"                    app:layout_constraintBottom_toTopOf="@id/search"                    app:layout_constraintLeft_toLeftOf="parent"                    app:layout_constraintRight_toRightOf="parent"                    app:layout_constraintTop_toTopOf="parent" />                <TextView                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"                    android:text="English - Uzbek"                    android:textColor="@color/white"                    app:layout_constraintLeft_toLeftOf="parent"                    app:layout_constraintRight_toRightOf="parent"                    app:layout_constraintTop_toBottomOf="@id/dic"                    tools:ignore="HardcodedText" />                <LinearLayout                    android:id="@+id/langs"                    android:layout_width="130dp"                    android:layout_height="40dp"                    android:layout_margin="30dp"                    android:background="@drawable/bg_lang"                    app:layout_constraintBottom_toTopOf="@id/search"                    app:layout_constraintStart_toStartOf="parent">                    <ImageView                        android:layout_width="50dp"                        android:layout_height="30dp"                        android:layout_gravity="center"                        android:src="@drawable/eng" />                    <TextView                        android:layout_width="wrap_content"                        android:layout_height="wrap_content"                        android:layout_gravity="center"                        android:text="English"                        android:textColor="@color/white"                        android:textSize="18dp"                        android:textStyle="bold" />                </LinearLayout>                <LinearLayout                    android:layout_width="130dp"                    android:layout_height="40dp"                    android:layout_margin="30dp"                    android:background="@drawable/bg_lang"                    app:layout_constraintBottom_toTopOf="@id/search"                    app:layout_constraintEnd_toEndOf="parent">                    <ImageView                        android:layout_width="50dp"                        android:layout_height="30dp"                        android:layout_gravity="center"                        android:src="@drawable/uzb" />                    <TextView                        android:layout_width="wrap_content"                        android:layout_height="wrap_content"                        android:layout_gravity="center"                        android:text="Uzbek"                        android:textColor="@color/white"                        android:textSize="18dp"                        android:textStyle="bold" />                </LinearLayout>                <ImageView                    android:id="@+id/info"                    android:layout_width="30dp"                    android:layout_height="30dp"                    android:layout_margin="18dp"                    android:src="@drawable/infobtn"                    app:layout_constraintEnd_toEndOf="parent"                    app:layout_constraintTop_toTopOf="parent" />                <androidx.appcompat.widget.SearchView                    android:id="@+id/search"                    android:layout_width="match_parent"                    android:layout_height="50dp"                    android:layout_marginHorizontal="25dp"                    android:layout_marginBottom="300dp"                    android:background="@drawable/bg"                    android:elevation="10dp"                    android:pointerIcon="zoom_in"                    app:iconifiedByDefault="false"                    app:layout_constraintBottom_toBottomOf="parent"                    app:layout_constraintEnd_toEndOf="parent"                    app:layout_constraintStart_toStartOf="parent"                    app:queryHint="Search"                    tools:ignore="MissingConstraints" />                <androidx.recyclerview.widget.RecyclerView                    android:layout_marginHorizontal="20dp"                    android:id="@+id/resacilview"                    android:layout_width="match_parent"                    android:layout_height="0dp"                    android:layout_marginTop="5dp"                    tools:itemCount="1"                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"                    app:layout_constraintBottom_toBottomOf="parent"                    app:layout_constraintTop_toBottomOf="@+id/search"                    tools:ignore="MissingConstraints"                    tools:listitem="@layout/item_dictionary" />            </androidx.constraintlayout.widget.ConstraintLayout>        </androidx.cardview.widget.CardView>    </androidx.constraintlayout.widget.ConstraintLayout></androidx.constraintlayout.widget.ConstraintLayout>