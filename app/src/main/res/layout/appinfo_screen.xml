<?xml version="1.0" encoding="utf-8"?><androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:app="http://schemas.android.com/apk/res-auto"    xmlns:tools="http://schemas.android.com/tools"    android:layout_width="match_parent"    android:layout_height="match_parent"    android:background="#efe9ff">    <androidx.constraintlayout.widget.ConstraintLayout        android:layout_width="match_parent"        android:layout_height="match_parent">        <androidx.cardview.widget.CardView            android:layout_width="match_parent"            android:layout_height="match_parent"            android:layout_marginHorizontal="10dp"            android:layout_marginVertical="10dp"            android:backgroundTint="#781ABC"            app:cardCornerRadius="35dp"            app:layout_constraintBottom_toBottomOf="parent"            app:layout_constraintEnd_toEndOf="parent"            app:layout_constraintStart_toStartOf="parent"            app:layout_constraintTop_toTopOf="parent">            <androidx.core.widget.NestedScrollView                android:layout_width="match_parent"                android:layout_height="match_parent">                <androidx.constraintlayout.widget.ConstraintLayout                    android:layout_width="match_parent"                    android:layout_height="match_parent"                    android:background="#781ABC">                    <ImageView                        android:id="@+id/img"                        android:layout_width="match_parent"                        android:layout_height="150dp"                        android:layout_marginTop="15dp"                        android:scaleType="centerCrop"                        android:src="@drawable/me_and_gita"                        app:layout_constraintEnd_toEndOf="parent"                        app:layout_constraintStart_toStartOf="parent"                        app:layout_constraintTop_toTopOf="parent" />                    <TextView                        android:id="@+id/iam"                        android:layout_width="wrap_content"                        android:layout_height="wrap_content"                        android:layout_marginStart="30dp"                        android:layout_marginTop="20dp"                        android:text="Hi, I am"                        android:textColor="@color/white"                        android:textSize="30sp"                        android:textStyle="bold"                        app:layout_constraintStart_toStartOf="parent"                        app:layout_constraintTop_toBottomOf="@id/img"                        tools:ignore="HardcodedText" />                    <TextView                        android:id="@+id/name"                        android:layout_width="wrap_content"                        android:layout_height="wrap_content"                        android:layout_marginStart="30dp"                        android:text="Azizbek Otaboyev"                        android:textColor="#1EE921"                        android:textSize="30sp"                        android:textStyle="bold"                        app:layout_constraintStart_toStartOf="parent"                        app:layout_constraintTop_toBottomOf="@id/iam"                        tools:ignore="HardcodedText" />                    <LinearLayout                        android:layout_width="match_parent"                        android:layout_height="wrap_content"                        android:layout_marginStart="30dp"                        android:layout_marginTop="10dp"                        android:orientation="vertical"                        app:layout_constraintTop_toBottomOf="@id/name">                        <TextView                            android:layout_width="wrap_content"                            android:layout_height="wrap_content"                            android:text="• Welcome to the Uzbek-English Dictionary App:"                            android:textColor="@color/white"                            android:textSize="15dp" />                        <TextView                            android:layout_width="wrap_content"                            android:layout_height="wrap_content"                            android:text="• Learn Uzbek Vocabulary:\nExplore a comprehensive collection of Uzbek words and phrases with their English translations to expand your language skills."                            android:textColor="@color/white"                            android:textSize="15dp" />                        <TextView                            android:layout_width="wrap_content"                            android:layout_height="wrap_content"                            android:text="• Efficient Translation:\nTranslate between English and Uzbek effortlessly. Type or speak the word or phrase, and let the app do the rest."                            android:textColor="@color/white"                            android:textSize="15dp" />                        <TextView                            android:layout_width="wrap_content"                            android:layout_height="wrap_content"                            android:text="• Favorites:\nSave your preferred words and phrases for easy access. Tap the heart icon to add or remove items from your favorites."                            android:textColor="@color/white"                            android:textSize="15dp" />                        <TextView                            android:layout_width="wrap_content"                            android:layout_height="wrap_content"                            android:text="• Search Functionality:Quickly locate translations with our powerful search feature. Ideal for learners of all levels."                            android:textColor="@color/white"                            android:textSize="15dp" />                        <TextView                            android:layout_width="wrap_content"                            android:layout_height="wrap_content"                            android:text="• Offline Access:\nUse the app without an internet connection, ensuring you can translate and learn wherever you are."                            android:textColor="@color/white"                            android:textSize="15dp" />                        <TextView                            android:layout_width="wrap_content"                            android:layout_height="wrap_content"                            android:text="• About GITA ACADEMY:\nThis app was developed by Azizbek Otaboyev, a student at GITA ACADEMY, as part of programming studies. Your support is greatly appreciated."                            android:textColor="@color/white"                            android:textSize="15dp" />                        <TextView                            android:layout_width="wrap_content"                            android:layout_height="wrap_content"                            android:layout_marginTop="15dp"                            android:text="• Contact with Azizbek Otaboyev:"                            android:textColor="@color/white"                            android:textSize="15dp"                            android:textStyle="bold" />                        <ImageView                            android:layout_marginStart="25dp"                            android:id="@+id/my_tg"                            android:layout_width="100dp"                            android:layout_height="100dp"                            android:scaleType="centerCrop"                            android:src="@drawable/logo_telegram" />                        <ImageView                            android:id="@+id/my_insta"                            android:layout_width="100dp"                            android:layout_height="100dp"                            android:scaleType="centerCrop"                            android:src="@drawable/icon_instagram"                            android:visibility="gone" />                        <ImageView                            android:id="@+id/my_youtube"                            android:layout_width="100dp"                            android:layout_height="100dp"                            android:scaleType="centerCrop"                            android:src="@drawable/icon_youtube"                            android:visibility="gone" />                        <TextView                            android:layout_width="wrap_content"                            android:layout_height="wrap_content"                            android:layout_marginTop="15dp"                            android:text="• Contact with GITA ACADEMY:"                            android:textColor="@color/white"                            android:textSize="15dp"                            android:textStyle="bold" />                        <LinearLayout                            android:layout_width="match_parent"                            android:layout_height="wrap_content"                            android:gravity="center">                            <ImageView                                android:id="@+id/gita_tg"                                android:layout_width="100dp"                                android:layout_height="100dp"                                android:scaleType="centerCrop"                                android:src="@drawable/logo_telegram" />                            <ImageView                                android:id="@+id/gita_insta"                                android:layout_width="100dp"                                android:layout_height="100dp"                                android:scaleType="centerCrop"                                android:src="@drawable/icon_instagram" />                            <ImageView                                android:id="@+id/gita_youtube"                                android:layout_width="100dp"                                android:layout_height="100dp"                                android:scaleType="centerCrop"                                android:src="@drawable/icon_youtube" />                        </LinearLayout>                    </LinearLayout>                </androidx.constraintlayout.widget.ConstraintLayout>            </androidx.core.widget.NestedScrollView>        </androidx.cardview.widget.CardView>    </androidx.constraintlayout.widget.ConstraintLayout></androidx.constraintlayout.widget.ConstraintLayout>